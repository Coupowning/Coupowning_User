<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/logo2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/kakao_login"
            android:layout_width="343dp"
            android:layout_height="70dp"

            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/kakaoyellow"
            android:contentDescription="@string/kakao"
            android:drawableLeft="@drawable/ic_kakaologo"
            android:fontFamily="@font/suncheonb"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="카카오로 시작하기"
            android:textColor="@color/kakaolabel"
            android:textSize="16dp" />
        <Button
            android:id="@+id/google_login"
            android:layout_width="343dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/google"
            android:drawableLeft="@drawable/ic_googlelogo"
            android:fontFamily="@font/suncheonb"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Google로 시작하기"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>