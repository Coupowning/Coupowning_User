<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/logo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kakao_login"
        style="@drawable/kakao_style"
        android:layout_width="343dp"
        android:layout_height="70dp"
        android:layout_marginTop="440dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/kakaoyellow"
        android:contentDescription="@string/kakao"
        android:drawableLeft="@drawable/ic_kakaologo"
        android:fontFamily="@font/suncheonb"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="카카오로 시작하기"
        android:textColor="@color/kakaolabel"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/google_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/google_login"
        android:layout_width="343dp"
        android:layout_height="70dp"
        android:layout_marginTop="516dp"
        android:layout_marginBottom="145dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/google"
        android:drawableLeft="@drawable/ic_googlelogo"
        android:fontFamily="@font/suncheonb"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Google로 시작하기"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>